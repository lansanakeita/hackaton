{% extends 'layoutforms.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

<div class="row container" style="text-align: center;">
    <h1 style="text-align: center; margin-bottom: 10px;">S'inscrire </h1>
    <p style="margin-top: 20px; margin-bottom: 50px;">Réservez ou louer votre bureau dès aujourd'hui
    </p>

    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="form">
            <div id="saisie-objectif">
                {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.lastname, {label: 'Nom'}) }}
                    </div>
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.firstname, {label: 'Prénom'}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="col-lg-6" style="border-color : black">
                        {{ form_row(registrationForm.roles, {
                        label: 'Vous êtes :',
                        }) }}
                    </div>
                </div>
                <div class="col-lg-6">
                    {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                    }) }}
                </div>
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            
            <button type="submit" class="btn btn-primary" style="margin-bottom: 50px;">S'inscrire</button>
            <p style="margin-bottom: 30px;"> Vous êtes déjà inscrit ? <a href="{{ path('app_login') }}"
                    style="color : black"> Connectez-vous
                    !</a></p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    <div class="col-lg-2">
    </div>
</div>
{% endblock %}