                                        <i class="fa-sharp fa-regular fa-calendar-days me-3"></i>
                                        Mes réservations en cours
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('app_historique_booking') }}" class="nav-link py-3 px-2" title="" data-bs-toggle="tooltip"
                                       data-bs-placement="right" data-bs-original-title="Réservations">
                                        <i class="fa-solid fa-clock-rotate-left me-3"></i>
                                        Historique
                                    </a>
                                </li>
                            {% endif %}

{#                            {% if app.user.roles[0] == 'ROLE_RENTER' %}
