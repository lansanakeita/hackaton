        <div class="container-fluid" id="sidebar_dasboard">
            <div class="row">
                <div class="col-sm-auto sticky-top" style="background-color: #073A4B">
                    <div class="d-flex flex-sm-column flex-row flex-nowrap align-items-center sticky-top">
                        <a href="{{ path('app_home') }}" class="d-block p-3 link-dark text-decoration-none" title="" data-bs-toggle="tooltip"
                            data-bs-placement="right" data-bs-original-title="Icon-only">
                            <a class="navbar-brand" href="/">
                                <img src="/assets/img/yellow_logo.svg" class=" align-text-top"
