{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block javascripts %}
    <script src="https://js.stripe.com/v3/"></script>
{% endblock %}

{% block stylesheets %}
    <style>
        .payment-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f6f9fc;
            border: 1px solid #e0e8f0;
            border-radius: 10px;
        }

        .payment-container h1 {
            margin-bottom: 30px;
            text-align: center;
        }

        #card-element {
            padding: 15px;
            background-color: #ffffff;
            border: 1px solid #d1dbe7;
            border-radius: 4px;
            margin-bottom: 20px;
        }

        #card-errors {
            color: #fa755a;
            font-size: 0.875rem;
            margin-bottom: 20px;
        }

        button#submit {
            width: 100%;
            background-color: #32325d;
            color: #ffffff;
            border: 0;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 600;
            padding: 10px 0;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button#submit:hover {
            background-color: #43458b;
        }
    </style>
{% endblock %}

{% block content %}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        // Créer une instance de Stripe avec la clé d'API publique
        const stripe = Stripe('{{ stripe_public_key }}');

        // Rediriger vers la session de paiement Stripe après le chargement de la page
        window.addEventListener('load', () => {
            stripe.redirectToCheckout({ sessionId: '{{ checkout_session_id }}' });
        });
    </script>
{% endblock %}
