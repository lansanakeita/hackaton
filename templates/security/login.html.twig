{% extends 'layoutforms.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
<div class="d-flex flex-column justify-content-center align-items-center" >
    <div class="text-center">
            {% for message in app.flashes('success') %}
                <div class="alert alert-danger">
                    <h5>{{ message }}</h5>
                </div>
            {% endfor %}
        </div>
    <div class="col-lg-4">
    </div>

    <div>
        <h1 class="mb-3 font-weight-normal">Se connecter</h1>
        <p style="margin-top: 20px; margin-bottom: 50px;">Réservez ou louer votre bureau dès aujourd'hui
        </p>
    </div>

    <div class="col-lg-4" id="login">
        <form method="post" id="saisie-objectif">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-5">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                autocomplete="email" style="border-color: black;" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                autocomplete="current-password" style="border-color: black;" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me
            functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <button class="btn btn-lg btn-primary mb-3" type="submit" style="margin-top: 30px;">
                Se connecter
            </button>
        </form>
    </div>
    <div class="col-lg-4">

    </div>
    <p style="margin-bottom: 30px;"> Vous n'êtes pas encore inscrit ? <a href="{{ path('app_register') }}"
            style="color : black">
            Inscrivez-vous
        </a> dès maintenant !</p>
</div>
{% endblock %}